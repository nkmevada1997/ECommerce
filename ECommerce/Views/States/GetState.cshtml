@model State

@{
    ViewData["Title"] = "GetState";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card" style="margin:auto;">
            <div class="card-header bg-dark text-white text-center bg-dark" style="height:50px">
                <h5 class="mt-1">Country Details</h5>
            </div>
            <div class="card-body bg-dark text-light" style="border-top:3px solid white">
                <table class="table table-striped table-dark">
                    <tr>
                        <td width="20%">
                            <b>@Html.DisplayNameFor(state=> state.StateName)</b>
                        </td>
                        <td>@Html.DisplayFor(state=> state.StateName)</td>
                    </tr>

                     <tr>
                        <td width="20%">
                            <b>@Html.DisplayNameFor(state=> state.Country.CountryName)</b>
                        </td>
                        <td>@Html.DisplayFor(state=> state.Country.CountryName)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(state => state.CreatedDate)</b>
                        </td>
                        <td>@Model.CreatedDate.ToString("dd/MM/yyyyy hh:mm:tt")</td>
                    </tr>
                </table>
                <div style="border-top:3px solid white">
                    <div class="mt-3 text-center">
                        <a href="@Url.Action("EditCustomer", "Customers",new {stateId=Model.StateId})" class="btn btn-warning">
                            <i class="fa fa-edit"></i>
                            <span>Edit State</span>
                        </a>
                        <a href="@Url.Action("Index", "Countries")" class="btn btn-secondary">
                            <i class="fa fa-list"></i>
                            <span>States</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


