@model Ecommerce.Models.States.AddState.AddStateModel

@{
    ViewData["Title"] = "AddState";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card" style="margin:auto;">
            <div class="card-header bg-dark text-white">
                <h5>Add State</h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(state=> state.StateName)
                                @Html.TextBoxFor(state=> state.StateName, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(state=> state.StateName)</span>
                                <br />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(state=> state.CountryId)
                                @Html.DropDownListFor(x => x.CountryId, new SelectList(ViewBag.CoutryItems, "CountryId", "CountryName"),"Select Country",new { @class = "form-control"})
                                <span class="text-danger">@Html.ValidationMessageFor(state=> state.CountryId)</span>
                                <br />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        @Html.ActionLink("Back To List", "Index","Countries","",new {@class="btn btn-secondary"})
                    </div>
                }
            </div>
        </div>
    </div>
</div>

