@model IEnumerable<State>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center text-uppercase">States</h3>
<p>
    <a href="@Url.Action("AddState", "States")" class="btn btn-primary">
        <i class="fa fa-plus"></i>
    </a>
</p>
<br />
<table class="table table-striped">
    <thead">
        <tr>
            <th style="width:40%">@Html.DisplayNameFor(state=> state.StateName)</th>
            <th style="width:30%">@Html.DisplayNameFor(state=> state.Country.CountryName)</th>
            <th>Action(s)</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var state in Model)
            {
            <tr>
                <td>@state.StateName</td>
                <td>@state.Country.CountryName</td>
                <td>
                    <a href="@Url.Action("GetState", "States",new {stateId=state.StateId})" class="btn btn-primary" style="width:60px;">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a href="@Url.Action("EditState", "States",new {stateId=state.StateId})" class="btn btn-warning" style="width:60px;">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                    </a>
                    <a href="@Url.Action("DeleteState", "States",new {stateId=state.StateId})" class="btn btn-danger" style="width:60px;">
                        <i class="fa fa-trash-can" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
</table>

