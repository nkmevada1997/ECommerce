@model Supplier

@{
    ViewData["Title"] = "DeleteSupplier";
}

<h3 class="text-center text-uppercase">Delete Supplier</h3>

<div class="row">
    <div class="col-md-8">
        div class="card" style="margin:auto;">
        <div class="card-header bg-dark text-white text-center bg-dark">
            <h5 class="mt-1">Are you sure you want to delete this?</h5>
        </div>
        <div class="card-body bg-dark text-light" style="border-top:3px solid white">
            <table class="table table-striped table-dark">
                <tr>
                    <td width="30%">
                        <b>@Html.DisplayNameFor(supplier => supplier.SupplierName)</b>
                    </td>
                    <td>@Html.DisplayFor(supplier => supplier.SupplierName)</td>
                </tr>

                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(supplier => supplier.Email)</b>
                    </td>
                    <td>@Html.DisplayFor(supplier => supplier.Email)</td>
                </tr>

                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(supplier => supplier.Country)</b>
                    </td>
                    <td>@Html.DisplayFor(supplier => supplier.Country)</td>
                </tr>

                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(supplier => supplier.State)</b>
                    </td>
                    <td>@Html.DisplayFor(supplier => supplier.State)</td>
                </tr>

                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(supplier => supplier.City)</b>
                    </td>
                    <td>@Html.DisplayFor(supplier => supplier.City)</td>
                </tr>

                <tr>
                    <td>
                        <b>@Html.DisplayNameFor(supplier => supplier.CreatedDate)</b>
                    </td>
                    <td>@Model.CreatedDate.ToString("dd/MM/yyyyy hh:mm:tt")</td>
                </tr>
            </table>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color" style="border-top:3px solid white">
                    <div class="mt-3 text-center">
                        <button type="submit" style="width:150px" class="btn btn-danger">
                            <i class="fa fa-trash-can"></i>
                            <span>Delete </span>
                        </button> |
                        <a href="@Url.Action("Index", "Suppliers")" class="btn btn-secondary ml-3">
                            <i class="fa fa-list"></i>
                            <span>Suppliers</span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


