@model EditSupplierModel

@{
    ViewData["Title"] = "EditSupplier";
}

<div class="card" style="width:60%; margin:auto;">
    <div class="card-header bg-dark text-white">
        <h3>Edit Supplier</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(supplier => supplier.Name)
                        @Html.TextBoxFor(supplier => supplier.Name, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(supplier => supplier.Name)</span>
                        <br />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(supplier => supplier.Country)
                        @Html.TextBoxFor(supplier => supplier.Country, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(supplier => supplier.Country)</span>
                        <br />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(supplier => supplier.State)
                        @Html.TextBoxFor(supplier => supplier.State, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(supplier => supplier.State)</span>
                        <br />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(supplier => supplier.City)
                        @Html.TextBoxFor(supplier => supplier.City, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(supplier => supplier.City)</span>
                        <br />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                @Html.ActionLink("Back To List", "Index","Suppliers", " ",new {@class="btn btn-secondary"})
            </div>
        }
    </div>
</div>  