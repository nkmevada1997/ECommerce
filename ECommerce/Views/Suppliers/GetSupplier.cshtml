@model Supplier

@{
    ViewData["Title"] = "GetSupplier";
}

<div>
    <partial name="../Shared/_Header.cshtml" />
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="margin:auto;">
                <div class="card-header bg-dark text-white text-center bg-dark" style="height:50px">
                    <h5 class="mt-1">Supplier Details</h5>
                </div>
                <div class="card-body bg-dark text-light" style="border-top:3px solid white">
                    <table class="table table-striped table-dark">
                        <tr>
                            <td width="30%">
                                <b>@Html.DisplayNameFor(supplier => supplier.SupplierName)</b>
                            </td>
                            <td>@Html.DisplayFor(supplier => supplier.SupplierName)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(supplier => supplier.Email)</b>
                            </td>
                            <td>@Html.DisplayFor(supplier => supplier.Email)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(supplier => supplier.Country)</b>
                            </td>
                            <td>@Html.DisplayFor(supplier => supplier.Country)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(supplier => supplier.State)</b>
                            </td>
                            <td>@Html.DisplayFor(supplier => supplier.State)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(supplier => supplier.City)</b>
                            </td>
                            <td>@Html.DisplayFor(supplier => supplier.City)</td>
                        </tr>

                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(supplier => supplier.CreatedDate)</b>
                            </td>
                            <td>@TimeZoneInfo.ConvertTimeFromUtc(@Model.CreatedDate,TimeZoneInfo.FindSystemTimeZoneById(TimeZoneInfo.Local.StandardName)).ToString("dd/MM/yyyy hh:mm:tt")</td>
                        </tr>
                    </table>
                    <div style="border-top:3px solid white">
                        <div class="mt-3 text-center">
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <a href="@Url.Action("EditSupplier","Suppliers",new { supplierId= Model.SupplierId})" class="btn btn-warning button">
                                        <i class="fa fa-edit"></i>
                                        <span>Edit Customer</span>
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a href="@Url.Action("Index", "Suppliers")" class="btn btn-secondary button">
                                        <i class="fa fa-list"></i>
                                        <span>Suppliers</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>