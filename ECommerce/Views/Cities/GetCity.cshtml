@model City

@{
    ViewData["Title"] = "GetState";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card" style="margin:auto;">
            <div class="card-header bg-dark text-white text-center bg-dark" style="height:50px">
                <h5 class="mt-1">Country Details</h5>
            </div>
            <div class="card-body bg-dark text-light" style="border-top:3px solid white">
                <table class="table table-striped table-dark">
                    <tr>
                        <td width="30%">
                            <b>@Html.DisplayNameFor(city=> city.CityName)</b>
                        </td>
                        <td>@Html.DisplayFor(city=> city.CityName)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(city=> city.State.StateName)</b>
                        </td>
                        <td>@Html.DisplayFor(city=> city.State.StateName)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(city => city.CreatedDate)</b>
                        </td>
                        <td>@TimeZoneInfo.ConvertTimeFromUtc(@Model.CreatedDate,TimeZoneInfo.FindSystemTimeZoneById(TimeZoneInfo.Local.StandardName)).ToString("dd/MM/yyyy hh:mm:tt")</td>
                    </tr>
                </table>
                <div style="border-top:3px solid white">
                    <div class="mt-3 text-center">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <a href="@Url.Action("EditCity", "Cities",new {cityId=Model.Id})" class="btn btn-warning button">
                                    <i class="fa fa-edit"></i>
                                    <span>Edit City</span>
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="@Url.Action("Index", "Cities")" class="btn btn-secondary button">
                                    <i class="fa fa-list"></i>
                                    <span>Cities</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>