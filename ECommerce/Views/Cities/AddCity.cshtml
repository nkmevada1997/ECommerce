@model AddCityModel

@{
    ViewData["Title"] = "AddCity";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card" style="margin:auto;">
            <div class="card-header bg-dark text-white text-center">
                <h5 class="mt-1">Add State</h5>
            </div>
            <div class="card-body bg-dark text-light" style="border-top:3px solid white">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(city=> city.StateId)
                                <select aria-label="State" class="form-select" id="stateDropdown"></select>
                                <span class="text-danger">@Html.ValidationMessageFor(city=> city.StateId)</span>
                                <br />
                            </div>
                        </div>
                    </div>

                    <div class="row" id="cityDiv">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(city=> city.CityName)
                                @Html.TextBoxFor(city=> city.CityName, new { @class = "form-control", id="citiInput" })
                                <span class="text-danger">@Html.ValidationMessageFor(city=> city.CityName)</span>
                                <br />
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="border-top:3px solid white">
                        <div class="mt-3 text-center">
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary button" id="submitButton">
                                        <i class="fa fa-plus"></i>
                                        <span>Add City</span>
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <a href="@Url.Action("Index", "Cities")" class="btn btn-secondary button">
                                        <i class="fa fa-list"></i>
                                        <span>Cities</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/city.js"></script>
    }