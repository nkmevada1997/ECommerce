@model Category

@{
    ViewData["Title"] = "GetCategory";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card" style="margin:auto;">
            <div class="card-header bg-dark text-white text-center bg-dark" style="height:50px">
                <h5 class="mt-1">Category Details</h5>
            </div>
            <div class="card-body bg-dark text-light" style="border-top:3px solid white">
                <table class="table table-striped table-dark">
                    <tr>
                        <td width="30%">
                            <b>@Html.DisplayNameFor(category=> category.CategoryName)</b>
                        </td>
                        <td>@Html.DisplayFor(category=> category.CategoryName)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(category=> category.CreatedDate)</b>
                        </td>
                        <td>@TimeZoneInfo.ConvertTimeFromUtc(@Model.CreatedDate,TimeZoneInfo.FindSystemTimeZoneById(TimeZoneInfo.Local.StandardName)).ToString("dd/MM/yyyy hh:mm:tt")</td>
                    </tr>
                </table>
                <div style="border-top:3px solid white">
                    <div class="mt-3 text-center">
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <a href="@Url.Action("EditCategory", "Categories",new {categoryId=Model.CategoryName})" class="btn btn-warning button">
                                    <i class="fa fa-edit"></i>
                                    <span>Edit Category</span>
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="@Url.Action("Index", "Categories")" class="btn btn-secondary button">
                                    <i class="fa fa-list"></i>
                                    <span>Categories</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>