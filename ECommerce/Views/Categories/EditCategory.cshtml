@model EditCategoryModel

@{
    ViewData["Title"] = "EditCategory";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card" style="margin:auto;">
            <div class="card-header bg-dark text-white text-center">
                <h5 class="mt-1">Edit Category</h5>
            </div>

            <div class="card-body bg-dark text-light" style="border-top:3px solid white">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(category=> category.CategoryName)
                                @Html.TextBoxFor(category=> category.CategoryName, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(category=> category.CategoryName)</span>
                                <br />
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="border-top:3px solid white">
                        <div class="mt-3 text-center">
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-warning button">
                                        <i class="fa fa-edit"></i>
                                        <span>Edit Category</span>
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <a href="@Url.Action("Index", "Categories")" class="btn btn-danger button">
                                        <i class="fa fa-list"></i>
                                        <span>Cancel</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>