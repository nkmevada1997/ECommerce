@model EditCustomerModel

@{
    ViewData["Title"] = "EditCustomer";
}

<div class="card" style="width:60%; margin:auto;">
    <div class="card-header bg-dark text-white">
        <h3>Edit Customer</h3>
    </div>

     <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(customer=> customer.FirstName)
                        @Html.TextBoxFor(customer=> customer.FirstName, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(customer=> customer.FirstName)</span>
                        <br />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(customer=> customer.LastName)
                        @Html.TextBoxFor(customer=> customer.LastName, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(customer=> customer.LastName)</span>
                        <br />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(customer=> customer.DOB)
                        @Html.TextBoxFor(customer=> customer.DOB,"{0:yyyy-MM-dd}", new { @class = "form-control",  type = "date"})
                        <span class="text-danger">@Html.ValidationMessageFor(customer=> customer.DOB)</span>
                        <br />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(customer=> customer.Gender)
                        @Html.TextBoxFor(customer=> customer.Gender, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(customer=> customer.Gender)</span>
                        <br />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(customer=> customer.Country)
                        @Html.TextBoxFor(customer=> customer.Country, new { @class = "form-control",})
                        <span class="text-danger">@Html.ValidationMessageFor(customer=> customer.Country)</span>
                        <br />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(customer=> customer.State)
                        @Html.TextBoxFor(customer=> customer.State, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessageFor(customer=> customer.State)</span>
                        <br />
                    </div>
                </div>
            </div>

             <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(customer=> customer.City)
                        @Html.TextBoxFor(customer=> customer.City, new { @class = "form-control",})
                        <span class="text-danger">@Html.ValidationMessageFor(customer=> customer.City)</span>
                        <br />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                @Html.ActionLink("Back To List", "Index","Customers", " ",new {@class="btn btn-secondary"})
            </div>
        }
    </div>
    
</div>  
