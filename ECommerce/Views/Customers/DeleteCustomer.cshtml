@model Customer

@{
    ViewData["Title"] = "DeleteCustomer";
}

<h3 class="text-center text-uppercase">Delete Customer</h3>
<div class="card" style="margin:auto;">
    <div class="card-header">
        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(customer=> customer.FirstName)</b>
                </td>
                <td>@Html.DisplayFor(customer=> customer.FirstName)</td>
            </tr>

            <tr>
                <td>
                    <b>@Html.DisplayNameFor(customer=> customer.LastName)</b>
                </td>
                <td>@Html.DisplayFor(customer=> customer.LastName)</td>
            </tr>

            <tr>
                <td>
                    <b>@Html.DisplayNameFor(customer=> customer.Email)</b>
                </td>
                <td>@Html.DisplayFor(customer=> customer.Email)</td>
            </tr>

            <tr>
                <td>
                    <b>@Html.DisplayNameFor(customer=> customer.DOB)</b>
                </td>
                <td>@Html.DisplayFor(customer=> customer.DOB)</td>
            </tr>

            <tr>
                <td>
                    <b>@Html.DisplayNameFor(customer=> customer.Gender)</b>
                </td>
                <td>@Html.DisplayFor(customer=> customer.Gender)</td>
            </tr>

            <tr>
                <td>
                    <b>@Html.DisplayNameFor(customer=> customer.Country)</b>
                </td>
                <td>@Html.DisplayFor(customer=> customer.Country)</td>
            </tr>

            <tr>
                <td>
                    <b>@Html.DisplayNameFor(customer=> customer.City)</b>
                </td>
                <td>@Html.DisplayFor(customer=> customer.City)</td>
            </tr>

        </table>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index","Customers"," ",new {@class="btn btn-secondary"})
            </div>
        }
    </div>
</div>
