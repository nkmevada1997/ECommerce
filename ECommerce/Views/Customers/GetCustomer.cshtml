@model Customer

@{
    ViewData["Title"] = "GetCustomer";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card" style="margin:auto;">
            <div class="card-header bg-dark text-white text-center bg-dark" style="height:50px">
                <h5 class="mt-1">@ViewBag.Header</h5>
            </div>
            <div class="card-body bg-dark text-light" style="border-top:3px solid white">
                <table class="table table-striped table-dark">
                    <tr>
                        <td width="20%">
                            <b>@Html.DisplayNameFor(customer=> customer.FirstName)</b>
                        </td>
                        <td>@Html.DisplayFor(customer=> customer.FirstName)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(customer=> customer.LastName)</b>
                        </td>
                        <td>@Html.DisplayFor(customer=> customer.LastName)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(customer=> customer.Email)</b>
                        </td>
                        <td>@Html.DisplayFor(customer=> customer.Email)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(customer=> customer.DOB)</b>
                        </td>
                        <td>@Model.DOB.ToString("dd/MM/yyyy")</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(customer=> customer.Gender)</b>
                        </td>
                        <td>@Html.DisplayFor(customer=> customer.Gender)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(customer=> customer.Country)</b>
                        </td>
                        <td>@Html.DisplayFor(customer=> customer.Country)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(customer=> customer.City)</b>
                        </td>
                        <td>@Html.DisplayFor(customer=> customer.City)</td>
                    </tr>

                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(customer=> customer.CreatedDate)</b>
                        </td>
                        <td>@Model.CreatedDate.ToString("dd/MM/yyyy hh:mm:tt")</td>
                    </tr>

                </table>
                <div style="border-top:3px solid white">
                    <div class="mt-3 text-center">
                        <a href="@Url.Action("EditCustomer", "Customers",new { customerId= Model.CustomerId})" class="btn btn-warning">
                            <i class="fa fa-edit"></i>
                            <span>Edit Customer</span>
                        </a>
                        <a href="@Url.Action("Index", "Customers")" class="btn btn-secondary">
                            <i class="fa fa-list"></i>
                            <span>Customers</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
