@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card bg-dark text-light" style="margin-top:250px; height:400px">
            <div class="card-header bg-dark text-white">
                <h5 class="text-center" style="margin-top:10px">Login </h5>
            </div>
            <div class="card-body" style="border-top:1px solid white">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row mt-2">
                        <div class="form-group">
                            @Html.LabelFor(x=> x.Email)
                            @Html.TextBoxFor(x=> x.Email, new { @class = "form-control" })
                            <span class="text-danger">@Html.ValidationMessageFor(x=> x.Email)</span>
                            <br />
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="form-group">
                            @Html.LabelFor(x=> x.Password)
                            @Html.TextBoxFor(x=> x.Password, new { @class = "form-control",type="password"})
                            <span class="text-danger">@Html.ValidationMessageFor(x=> x.Password)</span>
                            <br />
                        </div>
                    </div>

                    <div>
                        <div class="form-check">
                            @Html.CheckBoxFor(x => x.RememberMe,new {@class="form-check-input", @type="checkbox"})
                            @Html.LabelFor(x=> x.RememberMe, new {@class="form-check-label"})
                        </div>
                    </div>

                    @if (ViewBag.Message != null)
                    {
                        <span class="text-danger">@ViewBag.Message</span>
                    }

                    <div class="form-group mt-2" style=" border-top:3px solid white">
                        <div class="mt-3 text-center">
                            <button type="submit" class="loginButton">Login</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>