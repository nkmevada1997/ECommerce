@model Country

@{
    ViewData["Title"] = "DeleteCountry";
}

<div>
    <partial name="../Shared/_Header.cshtml" />
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" style="margin:auto;">
                <div class="card-header bg-dark text-white text-center bg-dark">
                    <h5 class="mt-1">Are you sure you want to delete this?</h5>
                </div>
                <div class="card-body bg-dark text-light" style="border-top:3px solid white" ">
                    <table class="table table-striped table-dark">
                        <tr>
                            <td width="30%">
                                <b>@Html.DisplayNameFor(country=> country.CountryName)</b>
                            </td>
                            <td>@Html.DisplayFor(country=> country.CountryName)</td>
                        </tr>
                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(country => country.CreatedDate)</b>
                            </td>
                            <td>@TimeZoneInfo.ConvertTimeFromUtc(@Model.CreatedDate,TimeZoneInfo.FindSystemTimeZoneById(TimeZoneInfo.Local.StandardName)).ToString("dd/MM/yyyy hh:mm:tt")</td>
                        </tr>

                    </table>
                    @using (Html.BeginForm())
                    {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color" style="border-top:3px solid white">
                        <div class="mt-3 text-center">
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <button type="submit" style="width:150px" class="btn btn-danger button">
                                        <i class="fa fa-trash-can"></i>
                                        <span>Delete </span>
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <a href="@Url.Action("Index", "Countries")" class="btn btn-secondary button">
                                        <i class="fa fa-list"></i>
                                        <span>Customers</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>