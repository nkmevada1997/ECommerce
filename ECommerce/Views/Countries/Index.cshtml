@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<Country>
@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center">
    <div>
        <h3 class="text-light">Countries</h3>
        <p>
            <a href="@Url.Action("AddCountry", "Countries")" class="btn btn-primary mt-3">
                <i class="fa fa-plus"></i>
                <span>Add Country</span>
            </a>
        </p>
        <br />
        <table class="table table-striped table-dark">
            <thead">
                <tr>
                    <th style="width:40%">@Html.DisplayNameFor(country => country.First().CountryName)</th>
                    <th style="width:40%">@Html.DisplayNameFor(country => country.First().CreatedDate)</th>
                    <th>Action(s)</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var country in Model)
                    {
                    <tr>
                        <td>@country.CountryName</td>
                        <td>@country.CreatedDate.ToString("dd/MM/yyyy hh:mm:tt")</td>
                        <td>
                            <a href="@Url.Action("GetCountry", "Countries",new {countryId=country.CountryId})" class="btn btn-primary" style="width:60px;">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="@Url.Action("EditCountry", "Countries",new {countryId=country.CountryId})" class="btn btn-warning" style="width:60px;">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                            </a>
                            <a href="@Url.Action("DeleteCountry", "Countries",new {countryId=country.CountryId})" class="btn btn-danger" style="width:60px;">
                                <i class="fa fa-trash-can" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
        </table>
        <br />

        <div id='Paging' style="text-align:center" class="text-light bg-dark">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount
        </div>

        <div>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>

</div>

